<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane stylesheets="@../style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dam2.adp.cinesphere.controller.LoginController">

    <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="no-border">
        <content>
            <VBox alignment="CENTER" spacing="18" styleClass="container">
                <Label styleClass="title" text="CineSphere" />

                <VBox spacing="10" styleClass="form-panel">
                    <Label styleClass="text-normal" text="Base de Datos:" />
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <ComboBox fx:id="cbBaseDatos" prefWidth="250.0" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnConectar" prefWidth="100.0" text="Conectar" />
                    </HBox>
                    <Label fx:id="lblEstadoConexion" styleClass="muted" text="Estado: Desconectado" />

                    <Separator opacity="0.5" />

                    <TextField fx:id="txtUsuario" disable="true" promptText="Usuario" />
                    <PasswordField fx:id="txtPassword" disable="true" promptText="Contraseña" />
                </VBox>

                <Button fx:id="btnLogin" disable="true" styleClass="accent-button" text="Iniciar Sesión" />
                <Hyperlink fx:id="linkRegistro" disable="true" text="Crear una cuenta" />
            </VBox>
        </content>
    </ScrollPane>

</StackPane>
