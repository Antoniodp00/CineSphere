<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.dam2.adp.cinesphere.controller.RegisterController">

    <ScrollPane fitToWidth="true" fitToHeight="true">
        <content>
            <VBox spacing="20" alignment="CENTER" styleClass="container">
                <Label text="Crear Cuenta" styleClass="title-2" />

                <VBox spacing="15" styleClass="form-panel">
                    <TextField fx:id="txtUsuario" promptText="Usuario"/>
                    <TextField fx:id="txtEmail" promptText="Email"/>
                    <PasswordField fx:id="txtPassword" promptText="ContraseÃ±a"/>
                    <DatePicker fx:id="dpNacimiento" promptText="Fecha de nacimiento"/>
                </VBox>

                <Button fx:id="btnRegistrar" text="Registrar" styleClass="button-accent"/>
                <Hyperlink fx:id="linkLogin" text="Volver al login"/>
            </VBox>
        </content>
    </ScrollPane>

</StackPane>
