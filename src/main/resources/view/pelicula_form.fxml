<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" stylesheets="@../style.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.dam2.adp.cinesphere.controller.PeliculaFormController">

    <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <Label styleClass="page-title" text="Nueva Película" />

        <ScrollPane fitToWidth="true" styleClass="no-border" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="15.0" styleClass="card">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <VBox spacing="5">
                        <Label text="Título" styleClass="text-normal"/>
                        <TextField fx:id="txtTitulo" promptText="Ej: El Padrino" />
                    </VBox>

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50" />
                            <ColumnConstraints percentWidth="50" />
                        </columnConstraints>

                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Año de lanzamiento" styleClass="text-normal"/>
                            <TextField fx:id="txtYear" promptText="Ej: 1972" />
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Duración (minutos)" styleClass="text-normal"/>
                            <TextField fx:id="txtDuracion" promptText="Ej: 175" />
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Rating IMDb (0-10)" styleClass="text-normal"/>
                            <TextField fx:id="txtRating" promptText="Ej: 9.2" />
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="Clasificación" styleClass="text-normal"/>
                            <TextField fx:id="txtClasificacion" promptText="Ej: R, PG-13, A" />
                        </VBox>
                    </GridPane>

                    <Separator />

                    <VBox spacing="5">
                        <Label text="Géneros (separados por coma)" styleClass="text-normal"/>
                        <TextField fx:id="txtGeneros" promptText="Ej: Drama, Crimen" />
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Directores (separados por coma)" styleClass="text-normal"/>
                        <TextField fx:id="txtDirectores" promptText="Ej: Francis Ford Coppola" />
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Actores (separados por coma)" styleClass="text-normal"/>
                        <TextArea fx:id="txtActores" promptText="Ej: Marlon Brando, Al Pacino, James Caan" wrapText="true" prefHeight="80"/>
                    </VBox>

                </VBox>
            </content>
        </ScrollPane>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button fx:id="btnCancelar" text="Cancelar" />
            <Button fx:id="btnGuardar" text="Guardar Película" styleClass="accent-button"/>
        </HBox>

    </VBox>
</AnchorPane>