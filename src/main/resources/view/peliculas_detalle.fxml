<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<ScrollPane  stylesheets="@../style.css" fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx" styleClass="no-border"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.dam2.adp.cinesphere.controller.PeliculaDetalleController">
    <content>
        <GridPane hgap="40" vgap="20" styleClass="detail-container">
            <padding>
                <Insets top="20" right="40" bottom="40" left="40"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="300"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Columna 0: Poster -->
            <ImageView fx:id="imgPoster" fitWidth="300" fitHeight="450" preserveRatio="true"
                       GridPane.rowIndex="0" GridPane.rowSpan="2"/>

            <!-- Columna 1, Fila 0: Título y Acciones -->
            <VBox spacing="25" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label fx:id="lblTitulo" styleClass="title" wrapText="true"/>
                <Label fx:id="lblSubtitulo" styleClass="subtitle"/>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label fx:id="lblRating" styleClass="movie-rating"/>
                    <Label fx:id="lblClasificacion" styleClass="chip"/>
                </HBox>

                <FlowPane fx:id="flowGeneros" hgap="10" vgap="10"/>

                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="btnMiLista" text="Añadir a mi lista"/>
                    <ComboBox fx:id="cbEstado" promptText="Estado"/>
                    <ComboBox fx:id="cbPuntuacion" promptText="Puntuación"/>
                    <Button fx:id="btnTrailer" text="Ver trailer" styleClass="accent-button"/>
                </HBox>
            </VBox>

            <!-- Columna 1, Fila 1: Sinopsis, Directores, Actores -->
            <VBox spacing="30" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <VBox spacing="10">
                    <Label text="Sinopsis" styleClass="section-title"/>
                    <Label fx:id="lblSinopsis" wrapText="true" styleClass="text-normal"/>
                </VBox>
                <VBox spacing="10">
                    <Label text="Directores" styleClass="section-title"/>
                    <FlowPane fx:id="flowDirectores" hgap="10" vgap="10"/>
                </VBox>
                <VBox spacing="10">
                    <Label text="Actores" styleClass="section-title"/>
                    <FlowPane fx:id="flowActores" hgap="10" vgap="10"/>
                </VBox>
            </VBox>

        </GridPane>
    </content>
</ScrollPane>
