<?xml version="1.0" encoding="UTF-8"?> <?import javafx.geometry.Insets?> <?import javafx.scene.control.Button?> <?import javafx.scene.control.ComboBox?> <?import javafx.scene.control.Label?> <?import javafx.scene.control.ScrollPane?> <?import javafx.scene.control.Separator?> <?import javafx.scene.control.TextField?> <?import javafx.scene.layout.BorderPane?> <?import javafx.scene.layout.FlowPane?> <?import javafx.scene.layout.HBox?> <?import javafx.scene.layout.Priority?> <?import javafx.scene.layout.StackPane?> <?import javafx.scene.layout.VBox?> <?import javafx.scene.image.ImageView?> <?import javafx.scene.image.Image?> <?import javafx.scene.shape.Rectangle?>
<BorderPane fx:id="mainRoot" prefHeight="768.0" prefWidth="1366.0" styleClass="root-pane"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <VBox fx:id="sidebar" prefWidth="200.0" styleClass="sidebar">
            <StackPane alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="200.0" VBox.vgrow="NEVER">
                <Label fx:id="appTitle" styleClass="app-title" text="CineSphere"/>
                <padding>
                    <Insets left="20.0"/>
                </padding>
            </StackPane>
            <Separator styleClass="separator"/>
            <VBox fx:id="navigationButtonsContainer" spacing="10.0" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="20.0"/>
                </padding>
                <Button fx:id="btnMovies" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308"
                        styleClass="sidebar-button" text="Películas">
                    <graphic> <!-- Icono de ejemplo para Películas -->
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <Image url="/img/noImage.png"/> <!-- Asegúrate de tener esta imagen en tu carpeta 'icons' -->
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnMyList" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308"
                        styleClass="sidebar-button" text="Mi Lista">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <Image url="/img/noImage.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnStatistics" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308"
                        styleClass="sidebar-button" text="Estadísticas">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <Image url="/img/noImage.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </VBox>
            <VBox fx:id="bottomButtonsContainer" spacing="10.0">
                <Button fx:id="btnSettings" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308"
                        styleClass="sidebar-button" text="Ajustes">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <Image url="/img/noImage.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnLogout" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308"
                        styleClass="sidebar-button" text="Cerrar Sesión">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <Image url="/img/noImage.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <padding>
                    <Insets bottom="20.0"/>
                </padding>
            </VBox>
        </VBox>
    </left>
    <center>
        <VBox fx:id="mainContent" styleClass="main-content">
            <HBox fx:id="filterBar" alignment="CENTER_LEFT" spacing="10.0" styleClass="filter-bar">
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
                </padding>
                <TextField fx:id="txtSearch" promptText="Buscar películas..." HBox.hgrow="ALWAYS"
                           styleClass="search-field"/>
                <ComboBox fx:id="cbYear" promptText="Año" styleClass="filter-combo"/>
                <ComboBox fx:id="cbRating" promptText="Rating" styleClass="filter-combo"/>
                <ComboBox fx:id="cbGenre" promptText="Género" styleClass="filter-combo"/>
                <Button fx:id="btnFilter" text="Filtrar" styleClass="action-button"/>
                <Button fx:id="btnClearFilters" text="Limpiar" styleClass="action-button"/>
            </HBox>
            <ScrollPane fx:id="movieScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="movie-scroll-pane">
                <content>
                    <FlowPane fx:id="movieFlowPane" hgap="20.0" vgap="20.0" alignment="TOP_LEFT"
                              styleClass="movie-flow-pane">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                        </padding> <!-- Ejemplo de una "movie-card" - se replicará y rellenará dinámicamente -->
                        <StackPane fx:id="movieCard1" styleClass="movie-card">
                            <Rectangle fx:id="movieImageClip1" arcHeight="10" arcWidth="10" width="180" height="270"
                                       styleClass="movie-image-clip"/>
                            <ImageView fx:id="movieImage1" fitHeight="270" fitWidth="180" pickOnBounds="true"
                                       preserveRatio="false" styleClass="movie-image">
                                <image> <!-- Placeholder para imagen de película -->
                                    <Image url="/img/noImage.png"/> <!-- Asegúrate de tener esta imagen en tu carpeta 'images' -->
                                </image>
                                <clip>
                                    <Rectangle arcHeight="10" arcWidth="10" width="180" height="270"/>
                                </clip>
                            </ImageView>
                            <VBox alignment="BOTTOM_LEFT" styleClass="movie-info-overlay">
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </padding>
                                <Label fx:id="movieTitle1" styleClass="movie-title" text="Título de la Película"
                                       wrapText="true"/>
                                <Label fx:id="movieYear1" styleClass="movie-year" text="Año (2023)"/>
                                <Label fx:id="movieGenres1" styleClass="movie-genres" text="Género 1, Género 2"
                                       wrapText="true"/>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label fx:id="movieRating1" styleClass="movie-rating" text="8.5"/>
                                    <ImageView fitHeight="12" fitWidth="12" preserveRatio="true">
                                        <Image url="/img/noImage.png"/> <!-- Icono de estrella, por ejemplo -->
                                    </ImageView>
                                </HBox>
                            </VBox>
                        </StackPane> <!-- Se pueden añadir más movie-cards aquí para demostración o se generarán dinámicamente -->
                    </FlowPane>
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>